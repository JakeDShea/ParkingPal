<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="396dp"
        android:layout_height="377dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="6dp">

    </FrameLayout>

    <Button
        android:id="@+id/setParkingLocation"
        android:layout_width="116dp"
        android:layout_height="68dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="22dp"
        android:text="Set Parking"
        app:backgroundTint="#00573B" />

    <TextView
        android:id="@+id/destinationAddress"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/parkingAddress"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="-1dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/parkingAddress"
        android:layout_width="405dp"
        android:layout_height="24dp"
        android:layout_below="@+id/pickLot"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="5dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/carsInArea"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/destinationAddress"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="5dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/totalSpots"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/carsInArea"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="4dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/currentLocationCordinates"

        android:layout_width="210dp"
        android:layout_height="30dp"
        android:layout_below="@+id/totalSpots"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="200dp"
        android:layout_marginBottom="2dp"
        android:text="DISTANCE"/>

    <Spinner
        android:id="@+id/pickLot"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@+id/frame_layout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="102dp"
        android:dropDownWidth="wrap_content"
        android:entries="@array/parking_array" />


</RelativeLayout>
